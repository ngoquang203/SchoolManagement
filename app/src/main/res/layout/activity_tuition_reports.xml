<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TuitionReports"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/regular3">
        <ImageButton
            android:id="@+id/tuitionReport_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/chevron_left"
            android:contentDescription="@string/app_name"
            android:background="@color/background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xem báo cáo học phí"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp">
        <Spinner
            android:id="@+id/tuitionReport_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_view"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="@dimen/regular1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số sinh viên"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/text"
                    android:textSize="@dimen/regular1"/>
                <TextView
                    android:id="@+id/tuitionReport_sumStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="300"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã nộp"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
                <TextView
                    android:id="@+id/tuitionReport_submitted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="100"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa nộp"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
                <TextView
                    android:id="@+id/tuitionReport_noSubmitted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="200"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_view"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="@dimen/regular1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tỉ lệ nộp theo khoa"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công nghệ thông tin"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/text"
                    android:textSize="@dimen/regular1"/>
                <TextView
                    android:id="@+id/tuitionReport_cntt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="50%"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài chính ngân hàng"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
                <TextView
                    android:id="@+id/tuitionReport_tcnh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="50%"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản trị kinh doanh"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
                <TextView
                    android:id="@+id/tuitionReport_qtkd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="50%"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/regular1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>